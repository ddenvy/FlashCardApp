                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Question}" TextWrapping="Wrap" Foreground="#FFFFFF"/>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
