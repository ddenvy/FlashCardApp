<Window x:Class="FlashCardApp.Views.StudyModeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Режим обучения" Height="600" Width="800"
        WindowStartupLocation="CenterScreen" Background="#F8F9FA">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Верхняя панель -->
        <Border Grid.Row="0" Background="#673AB7" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="📚 Режим обучения" 
                           FontSize="18" FontWeight="Bold" Foreground="White" 
                           VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="1" Text="{Binding StudyTopic, StringFormat='Тема: {0}'}" 
                           FontSize="14" Foreground="White" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="2" Text="{Binding Progress}" 
                           FontSize="14" Foreground="White" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Основная область карточки -->
        <Grid Grid.Row="1" Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Индикатор прогресса -->
            <ProgressBar Grid.Row="0" Height="8" Margin="0,0,0,24"
                         Maximum="{Binding TotalCards}" 
                         Value="{Binding CurrentIndex}"
                         Background="#E0E0E0" Foreground="#673AB7"/>
            
            <!-- Карточка -->
            <Border Grid.Row="1" Background="White" 
                    BorderBrush="#E0E0E0" BorderThickness="2" 
                    CornerRadius="16" Padding="32">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="4" 
                                      Color="Gray" Opacity="0.2"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Заголовок темы -->
                    <Border Grid.Row="0" Background="#673AB7" 
                            CornerRadius="8" Padding="12,6" 
                            HorizontalAlignment="Center" Margin="0,0,0,24">
                        <TextBlock Text="{Binding CurrentCard.Topic}" 
                                   FontWeight="Bold" Foreground="White" FontSize="14"/>
                    </Border>
                    
                    <!-- Содержимое карточки -->
                    <Grid Grid.Row="1">
                        <!-- Вопрос -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                      Visibility="{Binding ShowAnswer, 
                                      Converter={StaticResource BoolToVisibilityConverter}, 
                                      ConverterParameter=Inverted}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="ВОПРОС" FontWeight="Bold" FontSize="16" 
                                           Foreground="#666" HorizontalAlignment="Center" 
                                           Margin="0,0,0,16"/>
                                <TextBlock Text="{Binding CurrentCard.Question}" 
                                           FontSize="18" TextWrapping="Wrap" 
                                           HorizontalAlignment="Center" TextAlignment="Center"/>
                            </StackPanel>
                        </ScrollViewer>
                        
                        <!-- Ответ -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                      Visibility="{Binding ShowAnswer, 
                                      Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="ОТВЕТ" FontWeight="Bold" FontSize="16" 
                                           Foreground="#4CAF50" HorizontalAlignment="Center" 
                                           Margin="0,0,0,16"/>
                                <TextBlock Text="{Binding CurrentCard.Answer}" 
                                           FontSize="18" TextWrapping="Wrap" 
                                           HorizontalAlignment="Center" TextAlignment="Center"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                    
                    <!-- Инструкция -->
                    <TextBlock Grid.Row="2" 
                               Text="{Binding ShowAnswer, 
                               Converter={StaticResource BoolToStringConverter}, 
                               ConverterParameter='Оцените свои знания|Нажмите для показа ответа'}" 
                               FontSize="12" Foreground="#666" 
                               HorizontalAlignment="Center" Margin="0,24,0,0"/>
                </Grid>
            </Border>
            
            <!-- Сообщение об отсутствии карточек -->
            <Border Grid.Row="1" Background="White" 
                    BorderBrush="#E0E0E0" BorderThickness="2" 
                    CornerRadius="16" Padding="32"
                    Visibility="{Binding HasCards, 
                    Converter={StaticResource BoolToVisibilityConverter}, 
                    ConverterParameter=Inverted}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="📚" FontSize="48" HorizontalAlignment="Center" 
                               Margin="0,0,0,16"/>
                    <TextBlock Text="Нет карточек для изучения" 
                               FontSize="18" FontWeight="SemiBold" 
                               HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Добавьте карточки или выберите другую тему" 
                               FontSize="14" Foreground="#666" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Нижняя панель управления -->
        <Border Grid.Row="2" Background="White" 
                BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" 
                Padding="32,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Левые кнопки -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="⏮️ Предыдущая" 
                            Command="{Binding PreviousCardCommand}"
                            Background="#F5F5F5" BorderBrush="#DDD" 
                            Padding="12,8" Margin="0,0,8,0" 
                            BorderThickness="1"/>
                    
                    <Button Content="🔄 Начать сначала" 
                            Command="{Binding RestartCommand}"
                            Background="#FF9800" Foreground="White" 
                            Padding="12,8" Margin="0,0,8,0" 
                            BorderThickness="0"/>
                </StackPanel>
                
                <!-- Центральные кнопки -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    
                    <!-- Кнопка показа ответа -->
                    <Button Content="👁️ Показать ответ" 
                            Command="{Binding ShowAnswerCommand}"
                            Background="#2196F3" Foreground="White" 
                            Padding="16,8" Margin="0,0,16,0" 
                            BorderThickness="0"
                            Visibility="{Binding ShowAnswer, 
                            Converter={StaticResource BoolToVisibilityConverter}, 
                            ConverterParameter=Inverted}"/>
                    
                    <!-- Кнопки оценки -->
                    <StackPanel Orientation="Horizontal" 
                                Visibility="{Binding ShowAnswer, 
                                Converter={StaticResource BoolToVisibilityConverter}}">
                        <Button Content="❌ Не знаю" 
                                Command="{Binding DontKnowCommand}"
                                Background="#F44336" Foreground="White" 
                                Padding="16,8" Margin="0,0,8,0" 
                                BorderThickness="0"/>
                        
                        <Button Content="✅ Знаю" 
                                Command="{Binding KnowCommand}"
                                Background="#4CAF50" Foreground="White" 
                                Padding="16,8" 
                                BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Правые кнопки -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Следующая ⏭️" 
                            Command="{Binding NextCardCommand}"
                            Background="#F5F5F5" BorderBrush="#DDD" 
                            Padding="12,8" 
                            BorderThickness="1"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window> 