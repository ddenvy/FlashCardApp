<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="QuickMind.Views.ImportDialog"
        Title="Импорт колоды"
        Width="500" Height="400"
        CanResize="False"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Импорт колоды из файла"
                   FontSize="18" FontWeight="Bold"
                   Margin="0,0,0,20"/>
        
        <!-- Выбор формата -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Формат файла:" FontWeight="SemiBold"/>
            <ComboBox x:Name="FormatComboBox" 
                      SelectedIndex="0"
                      Margin="0,5,0,0">
                <ComboBoxItem Content="CSV файл (вопрос, ответ, тема)"/>
                <ComboBoxItem Content="Текстовый файл (вопрос - ответ)"/>
                <ComboBoxItem Content="JSON файл (экспорт Anki)"/>
                <ComboBoxItem Content="APKG файл (пакет Anki)"/>
            </ComboBox>
        </StackPanel>
        
        <!-- Выбор файла -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Файл для импорта:" FontWeight="SemiBold"/>
            <Grid Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="FilePathTextBox" 
                         Grid.Column="0"
                         IsReadOnly="True"
                         Watermark="Выберите файл для импорта"/>
                <Button Grid.Column="1" 
                        Content="Обзор"
                        Margin="5,0,0,0"
                        Click="OnBrowseClick"/>
            </Grid>
        </StackPanel>
        
        <!-- Название темы -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Название темы:" FontWeight="SemiBold"/>
            <TextBox x:Name="TopicTextBox" 
                     Margin="0,5,0,0"
                     Watermark="Введите название темы для импортированных карточек"/>
        </StackPanel>
        
        <!-- Дополнительные настройки -->
        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Дополнительные настройки:" FontWeight="SemiBold"/>
            <Grid Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" 
                           Text="Разделитель:" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" 
                         x:Name="SeparatorTextBox"
                         Text="-"/>
            </Grid>
        </StackPanel>
        
        <!-- Результат импорта -->
        <ScrollViewer Grid.Row="5" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,10">
            <TextBlock x:Name="ResultTextBlock" 
                       Text="Выберите файл и нажмите 'Импортировать'"
                       TextWrapping="Wrap"/>
        </ScrollViewer>
        
        <!-- Кнопки -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Отмена" 
                    Click="OnCancelClick"
                    Margin="0,0,10,0"/>
            <Button Content="Импортировать" 
                    Click="OnImportClick"
                    x:Name="ImportButton"/>
        </StackPanel>
    </Grid>
</Window> 